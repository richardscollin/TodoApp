nav(role='navigation').navbar.navbar-default
  div.container
    div.navbar-header
      button(type='button' ng-init='collapsed = true' ng-click='collapsed = !collapsed').navbar-toggle
        span.sr-only Toggle Navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a(href='/').navbar-brand Todo App
    div(collapse='collapsed').collapse.navbar-collapse
      ul.nav.navbar-nav.navbar-right
        if !session.loggedIn
          li: a(href='/signin') Sign In
          li: a(href='/register') Register
        else
          li: a(href='/signout') Sign Out
